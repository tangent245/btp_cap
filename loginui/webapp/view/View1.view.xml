<mvc:View controllerName="loginui.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
        <FlexBox id="_IDGenFlexBox1" justifyContent="Center" alignItems="Center" height="100%" >
            <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                <Label id="_IDGenLabel1" text="Username" />
                <Input id="_IDGenInput1" value="{/username}" />

                <Label id="_IDGenLabel2" text="Password" />
                <Input id="_IDGenInput2" type="Password" value="{/password}" />

                <Button id="_IDGenButton1" text="Login" press="onLoginPress" />
            </VBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View>

